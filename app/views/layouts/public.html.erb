<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Simple CMS <%= "| #{@page_title}" if @page_title%></title>
	<%= stylesheet_link_tag 'public' %>
</head>
<body>
	<div id="header">
		<h1>Simple CMS</h1>
	</div>
	<div id="main">
		<div id="navigation">
			<%=render(:partial => 'layouts/navigation', :locals => {:subjects => @subjects})%>
		</div>
		<div id="content"><%=yield%></div>
		<div class="clear"></div>
	</div>
	<div id="footer">
		<p id="copyright">&copy; chrisbcole.com / Chris Cole</p>
	</div>
</body>
</html>