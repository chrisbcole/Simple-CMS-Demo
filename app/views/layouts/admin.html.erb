<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Simple CMS | <%=@page_title || 'Admin Area'%></title>
	<%= stylesheet_link_tag('public','admin', :media => 'all') %>
	<%=javascript_include_tag('application')%>
</head>
<body>
	<div id="header">
		<h1>Simple CMS Admin</h1>
	</div>
	<div id="main">
		<% if !flash[:notice].blank? %>
		<div class="notice">
			<%=flash[:notice]%>
		</div>
		<%end%>
		<%= link_to("<< Back to Public", {:controller => 'public', :action => 'index'}, :class => 'back-link')%> <br>
		<%=yield%>
	</div>
	<div id="footer">
		<p id="copyright">&copy; chrisbcole.com / Chris Cole</p>
	</div>
</body>
</html>