<% @page_title = "Section List for #{@page.name} Page" %>
<% if !flash[:notice].blank? %>

<%end%>
<%= link_to("<< Back to Page List", {:controller => "pages", :action => 'list', :subject_id => @page.subject.id}, :class => "back-link") %>
<div class="section_list">
	<h2>sections</h2>
	<%=link_to("Add New section", {:action => 'new', :page_id => @page.id}, :class => 'action new')%>
	<table class="listing" summary="section list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Name</th>
			<th>Visible</th>
			<th>Content</th>
			<th>Page</th>
		</tr>
		<% @sections.each do |section| %>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.name %></td>
			<td class = "center"><%= status_tag(section.visible)%></td>
			<td class = "center"><%= section.content[0..24].sub(/\s+\Z/, "")+"..." %></td>
			<td><%=section.page.name%></td>
			<td class = "actions">
				<%=link_to("Show", {:action => 'show', :id => section.id, :page_id => @page.id}, :class => 'action show') %>
				<%=link_to("Edit", {:action => 'edit', :id => section.id, :page_id => @page.id}, :class => 'action edit') %>
				<%=link_to("Delete", {:action => 'delete', :id => section.id, :page_id => @page.id}, :class => 'action delete') %>
			</td>
		</tr>
		<%end%>
	</table>
</div>